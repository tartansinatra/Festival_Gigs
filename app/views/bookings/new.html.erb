<h4> Book a Gig for <%= @gig.artist.title %> at <%= @gig.venue.name%> ! <h4>


<%= form_for [@gig, @booking] do |f| %>
  <p> <%= @gig.artist.title %> </p>
  <p> Venue: <%= @gig.venue.name %> </p>
  <p> Date: <%= nice_date(@gig.start_date) %> </p>
  <p> Time: <%= nice_time(@gig.start_date) %> </p>
  <%= f.label :no_of_tickets %>
  <%= f.text_field :no_of_tickets %>
  <%= f.hidden_field :gig_id, value: @gig.id %>
  <%= f.submit 'Book this Gig' %>
<% end %>